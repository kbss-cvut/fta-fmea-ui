{
  "compilerOptions": {
    "module": "ESNext",
    "jsx": "react",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    // Paths mapping and aliasing
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@models/*": ["./src/models/*"],
      "@services/*": ["./src/services/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@oidc/*": ["./src/misc/oidc/*"]
    },
    "lib": ["es2017", "dom", "dom.iterable"],
    "types": ["vite/client"]
  },
  "include": ["src/*.ts", "src/*.tsx"]
}
